{
  "name": "node-gist-html",
  "version": "1.0.2",
  "description": "A simple library to convert gist code and GitHub files into gist-like html",
  "main": "lib/node-gist-html.min.js",
  "scripts": {
    "build": "webpack --env build",
    "dev": "webpack --progress --colors --watch --env dev",
    "test": "mocha --compilers js:babel-core/register --colors --timeout 5000 ./tests/**/*.test.js",
    "test:watch": "mocha --compilers js:babel-core/register --colors --timeout 5000 -w ./tests/**/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pastorsj/node-gist-html.git"
  },
  "keywords": [
    "gist",
    "githib",
    "html",
    "convertion"
  ],
  "author": "pastorsj",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/pastorsj/node-gist-html/issues"
  },
  "homepage": "https://github.com/pastorsj/node-gist-html#readme",
  "dependencies": {
    "cheerio": "^1.0.0-rc.2",
    "html-minifier": "^3.5.3",
    "request": "^2.81.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^6.4.1",
    "babel-plugin-add-module-exports": "^0.1.4",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^3.5.0",
    "eslint": "^3.15.0",
    "eslint-loader": "1.6.1",
    "mocha": "^3.5.0",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.12.0",
    "ts-loader": "^2.3.2",
    "typescript": "^2.4.2",
    "webpack": "2.2.1",
    "yargs": "6.6.0"
  }
}
